&params bigQ   =  20,
        beta   =  10.,
        kx     =  0.1,  
        var    = 'wave',
        shear  = 1.5, 
        kmin   = 0.1,
        kmax   = 1.1,
        qmin   = 0.05,
        qmax   = 1.0,
        bmin   = 40.,
        bmax   = 40., 
        eos    = 'iso' / 
&resis  Rm     = 2,
        amp    = 1.0,
        zstar  = 0.5,
        dzstar = 0.1 /
&grid   zmax   = 2.0,  
        nz     = 32,
        nk     = 1 /
&eigen  method     ='svd', 
        min_growth = 0.0,
        max_growth = 0.6,
        ntrials    = 100,
        prin       = .false. ,
        refine     = .false. /
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!       var = 'grav' -> vary Q
!       var = 'beta' -> vary beta 
!       var = 'wave' -> vary kx 
!       nk is no. of samples. 
!       nk=1 -> fixed parameters 
